@import url('https://fonts.googleapis.com/css2?family=Varela+Round&display=swap')
* {
  padding 0
  margin 0
  box-sizing border-box
}
a {
  text-decoration none
  &:visited {
    color inherit
  }
}

.input {
  width: 100%
  height: 40px
  appearance none
  font-family $font
  font-size $size-text
  padding-left 5px
  //border none
  transition .3s
  &:hover, &:focus {
    border-color #1683D8

  }
}
